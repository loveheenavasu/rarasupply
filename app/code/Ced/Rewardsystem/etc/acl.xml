<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
               <resource id="Ced_Rewardsystem::rewardsystem_content" title="Reward System" sortOrder="10" >
                    <resource id="Ced_Rewardsystem::catalogrule" title="Catalog Rule" sortOrder="10" />
                     <resource id="Ced_Rewardsystem::shoppingcartrule" title="Shopping Cart Rule" sortOrder="20" />
                     <resource id="Ced_Rewardsystem::customerreport" title="Customer Report" sortOrder="30" />
                </resource>
               <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ced_Rewardsystem::config_setting" title="Reward System"/>
                        </resource>
                    </resource>
                </resource> 
                
            </resource>
        </resources>
    </acl>
</config>